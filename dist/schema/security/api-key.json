{
    "$id": "#/api-key",
    "title": "API Key",
    "description": "Key for accessing the API",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "Name of this API Key",
            "type": "string"
        },
        "user": {
            "$ref": "#/user-ref"
        },
        "secret": {
            "title": "Secret",
            "description": "The API Key Secret",
            "type": "string",
            "default": "",
            "readOnly": true
        },
        "tags": {
            "$ref": "#/tags"
        },
        "_esRoles": {
            "create": [
                "admin"
            ],
            "read": [
                "admin"
            ],
            "update": [
                "admin"
            ],
            "delete": [
                "admin"
            ]
        }
    },
    "required": [
        "user",
        "secret"
    ]
}
